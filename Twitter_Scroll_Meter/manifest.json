{
    "manifest_version": 3,
    "name": "Twitter Scroll Meter",
    "version": "1.1.1",
    "description": "Twitter/Xのスクロール量を計測します。",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://twitter.com/*",
                "*://x.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "options_page": "setting.html",
    "web_accessible_resources": [
        {
            "resources": [
                "setting.html",
                "setting.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}