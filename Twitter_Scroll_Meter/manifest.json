{
    "manifest_version": 3,
    "name": "Twitter Scroll Meter",
    "version": "1.0",
    "description": "measure the scrolling distance on Twitter.",
    "permissions": [
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://twitter.com/*",
                "*://x.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "test.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}